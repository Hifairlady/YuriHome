        <!--            app:layout_constraintStart_toEndOf="@+id/imageView10"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/imageView10" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>