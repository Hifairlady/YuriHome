<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_child_comment_gender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_gender_male_100" />

        <TextView
            android:id="@+id/tv_child_comment_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:text="@string/string_comment_child_item_nickname_text"
            android:textAppearance="@style/StrongTextStyle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_child_comment_gender"
            app:layout_constraintEnd_toStartOf="@+id/tv_child_comment_floor"
            app:layout_constraintStart_toEndOf="@+id/iv_child_comment_gender"
            app:layout_constraintTop_toTopOf="@+id/iv_child_comment_gender" />

        <TextView
            android:id="@+id/tv_child_comment_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/string_comment_child_item_floor_text"
            android:textAppearance="@style/ToolbarTitleTextStyle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_child_comment_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_child_comment_gender" />

        <TextView
            android:id="@+id/tv_child_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/string_comment_child_item_content_text"
            android:textAppearance="@style/NormalTextStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_child_comment_nickname" />

        <!--        <androidx.gridlayout.widget.GridLayout-->
        <!--            android:id="@+id/gridLayout"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:layout_marginEnd="16dp"-->
        <!--            app:columnCount="3"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent">-->

        <!--        </androidx.gridlayout.widget.GridLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>