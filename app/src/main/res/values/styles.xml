<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    16sp-->
    <style name="StrongTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <!--    14sp-->
    <style name="ComicItemTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <!--    14sp-->
    <style name="ReaderBottomTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <!--    14sp-->
    <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/rubik</item>
    </style>

    <!--    16sp-->
    <style name="TransparentTitleTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#00000000</item>
    </style>

</resources>